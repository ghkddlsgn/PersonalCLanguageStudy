{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Project1/*.cpp",
                "${workspaceFolder}/Project1/Bank/*.cpp",
                "${workspaceFolder}/Project1/CommonClass/*.cpp",
                "${workspaceFolder}/Project1/DataStructure/List/*.cpp",
                "${workspaceFolder}/Project1/DataStructure/Matrix/*.cpp",
                "${workspaceFolder}/Project1/DataStructure/Queue/*.cpp",
                "${workspaceFolder}/Project1/DataStructure/Tree/*.cpp",
                "-o",
                "${workspaceFolder}/Project1/Main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                    "args": ["-c"]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}